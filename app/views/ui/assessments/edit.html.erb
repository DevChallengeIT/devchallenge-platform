<%= task.title %>
<%= task.description %>

Start at: <%= render(UI::TimestampComponent.new(data: task.start_at)) %>
Submit at: <%= render(UI::TimestampComponent.new(data: task.submit_at)) %>
Result at: <%= render(UI::TimestampComponent.new(data: task.result_at)) %>


<ul id="assessments">
  <%= link_to "Zip file", rails_blob_path(task_submission.zip_file, disposition: 'attachment'), class: UI::BUTTON_SECONDARY %>

  <div class="my-5">
    <%= form_with(model: @task_assessment, scope: :task_assessment, url: assessment_path, method: :put, task_submission: task_submission, class: "contents") do |form| %>
      <div class="">
        <div class="">
          <%= form.label :value, class: UI::FORM_LABEL %>
          <%= form.number_field :value, autofocus: true, class: UI::FORM_INPUT %>
          <%= render(UI::ErrorTagComponent.new(errors: @task_assessment.errors, field: :value)) %>
        </div>

        <div class="flex items-center justify-between">
          <%= form.submit t('words.update'), class: UI::BUTTON_PRIMARY %>
          <%= link_to t('words.back'), task_path(task), class: UI::BUTTON_SECONDARY %>
        </div>
      </div>

      <div class="">
        <%= "#{task_submission.notes}" %>
      </div>
    <% end %>

  </div>
</ul>
