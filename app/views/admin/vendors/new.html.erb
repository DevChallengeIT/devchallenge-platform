<div class="md:w-2/3 w-full">
  <h2 class="<%= UI::H2 %>"><%= t('words.new') %> <%= t('resources.vendors.singular') %></h2>

  <%= form_with(model: @vendor, scope: :vendor, url: admin_vendors_path, method: :post, class: "contents") do |form| %>
    <div class="my-5">
      <%= form.label :name, class: UI::FORM_LABEL %>
      <%= form.text_field :name, autofocus: true, autocomplete: "disabled", class: UI::FORM_INPUT %>
      <%= render(UI::ErrorTagComponent.new(errors: @vendor.errors, field: :name)) %>
    </div>
    <div class="flex items-center justify-between">
      <%= form.submit t('words.create'), class: UI::BUTTON_PRIMARY %>
      <%= link_to t('words.back'), admin_vendors_path, class: UI::BUTTON_SECONDARY %>
    </div>
  <% end %>

</div>
