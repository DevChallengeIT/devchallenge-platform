<%= render 'admin/shared/challenge_navbar', selected: :members %>

<div class="md:w-2/3 w-full">
  <h2 class="<%= UI::H2 %>"><%= t('words.edit') %> <%= t('resources.members.singular') %></h2>

  <%= form_with(model: member, scope: :member, url: admin_challenge_member_path(challenge, member), method: :put, class: "contents") do |form| %>
    <div class="my-5">
      <%= form.label :role, class: UI::FORM_LABEL %>
      <%= form.select :role, roles, {}, class: UI::FORM_INPUT %>
      <%= render(UI::ErrorTagComponent.new(errors: member.errors, field: :title)) %>
    </div>

    <div class="flex items-center justify-between">
      <%= form.submit t('words.update'), class: UI::BUTTON_PRIMARY %>
      <%= link_to t('words.back'), admin_challenge_members_path(challenge), class: UI::BUTTON_SECONDARY %>
    </div>
  <% end %>
</div>

<div class="mt-8">
  <%= t('words.danger') %>
  <%= button_to t('words.remove'), admin_challenge_member_path(challenge, member), method: :delete, class: UI::BUTTON_DANGER, form: {data: {turbo_confirm: t('messages.are_you_sure')}} %>
</div>
