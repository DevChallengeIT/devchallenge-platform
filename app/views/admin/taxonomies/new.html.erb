<div class="md:w-2/3 w-full">
  <h2 class="<%= UI::H2 %>"><%= t('words.new') %> <%= t('resources.taxonomies.singular') %></h2>

  <%= form_with(model: @taxonomy, scope: :taxonomy, url: admin_taxonomies_path, method: :post, class: "contents") do |form| %>
    <div class="my-5">
      <%= form.label :title, class: UI::FORM_LABEL %>
      <%= form.text_field :title, autofocus: true, class: UI::FORM_INPUT %>
      <%= render(UI::ErrorTagComponent.new(errors: @taxonomy.errors, field: :title)) %>
    </div>

    <div class="flex items-center justify-between">
      <%= form.submit t('words.create'), class: UI::BUTTON_PRIMARY %>
      <%= link_to t('words.back'), admin_taxonomies_path, class: UI::BUTTON_SECONDARY %>
    </div>
  <% end %>
</div>
