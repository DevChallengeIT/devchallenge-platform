<div class="md:w-2/3 w-full">
  <h2 class="<%= UI::H2 %>">
    <%= user.email %>
    <%= @test %>
  </h2>
  <%= form_with(model: user, scope: :user, url: admin_user_path(user), method: :put, class: "contents") do |form| %>
    <div class="my-5">
      <%= form.label :email, class: UI::FORM_LABEL %>
      <%= form.text_field :email, autofocus: true, class: UI::FORM_INPUT %>
      <%= render(UI::ErrorTagComponent.new(errors: user.errors, field: :email)) %>
    </div>
    <div class="my-5">
      <%= form.label :slug, class: UI::FORM_LABEL %>
      <%= form.text_field :slug, class: UI::FORM_INPUT %>
      <%= render(UI::ErrorTagComponent.new(errors: user.errors, field: :slug)) %>
    </div>
    <div class="my-5">
      <%= form.label :full_name, class: UI::FORM_LABEL %>
      <%= form.text_field :full_name, class: UI::FORM_INPUT %>
      <%= render(UI::ErrorTagComponent.new(errors: user.errors, field: :full_name)) %>
    </div>
    <div class="my-5">
      <%= form.label :time_zone, class: UI::FORM_LABEL %>
      <%= form.select :time_zone, ActiveSupport::TimeZone.all.map(&:name), {}, class: UI::FORM_INPUT %>
      <%= render(UI::ErrorTagComponent.new(errors: user.errors, field: :time_zone)) %>
    </div>
    <div class="flex items-center justify-between">
      <%= form.submit class: UI::BUTTON_PRIMARY %>
        <%= link_to t('words.back'), admin_users_path, class: UI::BUTTON_SECONDARY %>
    </div>
  <% end %>
</div>

<div class="my-5">
  <%= button_to t('auth.log_in_as'), admin_user_log_in_as_path(user), class: UI::BUTTON_SECONDARY, form: {data: {turbo_confirm: t('messages.are_you_sure')}} %>
</div>

<div class="mt-8">
  <%= t('words.danger') %>
  <%= button_to t('words.remove'), admin_user_path(user), method: :delete, class: UI::BUTTON_DANGER, form: {data: {turbo_confirm: t('messages.are_you_sure')}} %>

</div>
