<div class="md:w-2/3 w-full">
  <h2 class="<%= UI::H2 %>"><%= t('words.new') %> <%= t('resources.judges.singular') %></h2>

  <%= form_with(model: @judge, scope: :judge, url: admin_judges_path, method: :post, class: "contents") do |form| %>
    <div class="my-5">
      <%= form.label :user, class: UI::FORM_LABEL %>
      <%= form.select :user_id, Repo::User.all.pluck(:email, :id), {}, class: UI::FORM_INPUT %>
      <%= render(UI::ErrorTagComponent.new(errors: @judge.errors, field: :user)) %>
    </div>

    <div class="my-5">
      <%= form.label :challenge, class: UI::FORM_LABEL %>
      <%= form.select :challenge_id, Repo::Challenge.all.pluck(:title, :id), {}, class: UI::FORM_INPUT %>
    </div>

    <div class="flex items-center justify-between">
      <%= form.submit t('words.create'), class: UI::BUTTON_PRIMARY %>
      <%= link_to t('words.back'), admin_judges_path, class: UI::BUTTON_SECONDARY %>
    </div>
  <% end %>

</div>
