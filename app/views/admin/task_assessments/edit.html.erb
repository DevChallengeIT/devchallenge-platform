<div class="md:w-2/3 w-full">
  <h2 class="<%= UI::H2 %>">
    <%= "#{task_assessment.task.title} #{t('resources.task_assessments.singular')}" %>
  </h2>

  <%= form_with(model: task_assessment, scope: :task_assessment, url: admin_task_assessment_path(task, task_assessment), method: :put, class: "contents") do |form| %>
    <div class="my-5">
      <%= form.label :value, class: UI::FORM_LABEL %>
      <%= form.number_field :value, rows: 4, class: UI::FORM_INPUT %>
      <%= render(UI::ErrorTagComponent.new(errors: task.errors, field: :value)) %>
    </div>

    <div class="my-5">
      <%= form.label :comment, class: UI::FORM_LABEL %>
      <%= form.rich_text_area :comment, rows: 4, class: UI::FORM_INPUT %>
      <%= render(UI::ErrorTagComponent.new(errors: task_assessment.errors, field: :comment)) %>
    </div>

    <div class="flex items-center justify-between">
      <%= form.submit class: UI::BUTTON_PRIMARY %>
      <%= link_to t('words.back'), admin_task_submissions_path(task_assessment.task), class: UI::BUTTON_SECONDARY %>
    </div>
  <% end %>
</div>
